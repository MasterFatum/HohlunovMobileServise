@model IEnumerable<Products>


@{
    ViewBag.Title = "Каталог товаров";
}

<h2>Каталог товаров</h2>

<div align="right">
</div>
<br />
<div class="panel panel-success">
    <div class="panel-heading">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Продукт</th>
                    <th scope="col">Цена</th>
                    <th scope="col">Количество</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Products products in Model)
                {
                <tr>
                    <td>
                        @products.ProductName
                    </td>
                    <td>
                        <b>@products.ProductPrice ₽</b>
                    </td>
                    <td>
                        @products.ProductCount
                    </td>
                    <td>
                        @Html.ActionLink("Добавить в корзину", "Main", "Home", new { products.Id }, new { @class = "btn btn-success btn-xs" })
                    </td>
                    <td>
                        @Html.ActionLink("Купить в 1 клик", "Main", "Home", new { products.Id }, new { @class = "btn btn-warning btn-xs" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

